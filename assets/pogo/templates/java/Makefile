JAVAC = javac -classpath ..:$(CLASSPATH)

# -----------------------------------------------------------------
#
#		The compiler flags
#
#------------------------------------------------------------------

JAVAFLAGS = -g

#-------------------------------------------------------------------


CLASS	=	TemplateDevServ
CL_LIST =	$(CLASS).class

PACKAGE = $(CLASS)


#
# Rule for compiling
#

.SUFFIXES:	.class .java
.java.class:
	$(JAVAC) $(JAVAFLAGS) $<

#-----------------------------------------------------------------


all:	$(PACKAGE)

$(PACKAGE): 	$(CL_LIST)


#-----------------------------------------------------------------
PACK_HOME = ..

jar:	$(PACKAGE)
	cd $(PACK_HOME); jar cvf		\
		$(PACKAGE)/$(PACKAGE).jar 	\
		$(PACKAGE)/*.class
	ls -l $(PACKAGE).jar 

#-----------------------------------------------------------------
doc:
	javadoc -d doc				\
	-windowtitle $(CLASS)		\
	-private 					\
	-version -author			\
	-nodeprecated				\
	-header "$(CLASS) Class"	\
	*.java

#-----------------------------------------------------------------

clean:
	rm -f *.class
